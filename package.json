{
  "name": "getmyserver",
  "version": "1.0.1",
  "description": "Application Electron pour tester des routes HTTP",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac",
    "build:all": "electron-builder --mac --win --linux",
    "release": "electron-builder --mac --publish always",
    "release:all": "electron-builder --mac --win --linux --publish always",
    "release:script": "./release.sh"
  },
  "keywords": [
    "electron",
    "http",
    "api",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.getmyserver.app",
    "productName": "GetMyServer",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "identity": null
    },
    "files": [
      "**/*",
      "!saved_routes/**/*",
      "!data.json",
      "!dist/**/*",
      "!.git/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Duapar13",
        "repo": "GetMyServer"
      }
    ]
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2"
  }
}
